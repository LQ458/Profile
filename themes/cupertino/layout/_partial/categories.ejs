<div class="container">
  <div class="meta">
    <h2 class="title"><%= __('categories') %></h2>
  </div>
  <div class="categories">
    <% site.categories.forEach(category => { %>
    <a href="<%- getLocalizedUrl(category.path) %>" class="category"><%- category.name %><% if (theme.categories_post_count) { %><span class="count"><%- category.length %></span><% } %></a>
    <% }) %>
  </div>
</div>
